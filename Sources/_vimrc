"""""""""""""""" General vim settings """"""""""""""""""""""""""
" Vi compatible

syntax on
set encoding=utf-8
set background=dark
set shiftwidth=4
set mouse+=a 
set expandtab
set tabstop=4
set cursorline
set incsearch
set hlsearch
set confirm 
set number
set ff=unix
set paste
set rnu

" Store backup, undo, and swap files in the temporary directory
set backupdir=$HOME/temp//
set undodir=$HOME/temp//

"""""""""""" End of general settings """""""""""""""




